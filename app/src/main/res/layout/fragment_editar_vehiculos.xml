<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    tools:context=".editarVehiculosFragment">

    <EditText
        android:id="@+id/numeroPlacaVehiculoEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10sp"
        android:padding="15sp"
        android:background="@color/btnColor"
        android:hint="Ingrese la placa del vehiculo"
        />

    <EditText
        android:id="@+id/nombreVehiculoEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="90sp"
        android:padding="15sp"
        android:hint="Nombre"
        android:background="@color/btnColor"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/modeloVehiculoEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="170sp"
        android:padding="15sp"
        android:background="@color/btnColor"
        android:hint="Modelo"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/MarcaVehiculoEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="240sp"
        android:padding="15sp"
        android:hint="Marca"
        android:background="@color/btnColor"
        android:visibility="invisible"
        />

    <Spinner
        android:id="@+id/tipoVehiculoEditarSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/tipoVehiculo"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="310sp"
        android:padding="15sp"
        android:background="@color/white"
        android:visibility="invisible"
        />

    <Spinner
        android:id="@+id/estadoVehiculoEditarSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/estadoVehiculo"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="380sp"
        android:padding="15sp"
        android:background="@color/white"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btnEditarVehiculoEdit"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="15sp"
        android:text="Editar" />

    <Button
        android:id="@+id/btnRegresarEditarVehiculo"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_gravity="start|bottom"
        android:layout_margin="15sp"
        />

</FrameLayout>