<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clienteEditarFragment">

    <EditText
        android:id="@+id/duiClienteEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="10sp"
        android:padding="15sp"
        android:hint="Ingrese DUI del Cliente"
        />

    <EditText
        android:id="@+id/nombreClienteEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="90sp"
        android:hint="Nombres"
        android:inputType="textPersonName"
        android:padding="15sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/telefonoClienteEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="170sp"
        android:padding="15sp"
        android:hint="Teléfono"
        android:visibility="invisible"
        />

    <EditText
        android:id="@+id/direccionClienteEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="240sp"
        android:padding="15sp"
        android:hint="Dirección"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/btnEditarClienteEdit"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:layout_gravity="end|bottom"
        android:layout_margin="15sp"
        />

    <Button
        android:id="@+id/btnRegresarEditarCliente"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_gravity="start|bottom"
        android:layout_margin="15sp"
        />

</FrameLayout>